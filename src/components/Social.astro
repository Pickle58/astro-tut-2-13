---
const { platform, username } = Astro.props;
const icons = {
  github: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/github/github-original.svg",
};

const platformUrl = `https://www.${platform}.com/${username}`;
const iconSrc = icons[platform] || ""; // Default to empty if no icon found
---

<a 
  href={platformUrl} 
  target="_blank" 
  rel="noopener noreferrer"
  class="flex items-center gap-2 px-4 py-2 bg-purple-700 text-white rounded hover:bg-purple-800 transition dark:bg-purple-600 dark:hover:bg-purple-500"
>
  {iconSrc && (
    <img 
      src={iconSrc} 
      alt={`${platform} icon`} 
      class="w-4 h-4 max-w-[1rem] max-h-[1rem] opacity-90 dark:brightness-200 dark:drop-shadow-[0_0_2px_white]"
      style="width: 1.5rem; height: 1.5rem;"
    />
  )}
  <span class="text-sm">{platform}</span>
</a>